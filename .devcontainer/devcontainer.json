{
    "name": "Python FastAPI Dev Container",
    "dockerFile": "Dockerfile",
    "appPort": [8000],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}